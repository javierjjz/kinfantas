//09-10-2014.cpp//
#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"
using namespace std;

void main()
{int n,i,s,x;
 cout<<"Ingrese el valor de n: ";
 cin>>n;
 cout<<"Ingrese el valor de x: ";
 cin>>x;
 s=0;
 for(i=1;i<=n;i++)
		 s=s+ powf(x,i);
 cout<<"La suma es: "<<s<<endl;
 getch();
}
