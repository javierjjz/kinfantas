// 09-10-2014.cpp// 
#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;

void main()
{int n,i,s;
 cout<<"Ingrese el valor de n: ";
 cin>>n;
 s=0;
 for(i=1;i<=n;i++)
 {s=s+i;
 }
 cout<<"La suma es: "<<s<<endl;
 getch();
}

